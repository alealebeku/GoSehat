<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginStart="12dp"
    android:layout_marginEnd="12dp"
    android:layout_marginVertical="10dp"
    android:layout_marginHorizontal="10dp"
    app:cardCornerRadius="0dp"
    app:cardElevation="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/listtanggal"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="10dp"
            android:text="Tanggal"
            android:textStyle="bold"
            android:textColor="@color/blue"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/listwaktumulai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/listtanggal"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="5dp"
            android:text="Waktu Mulai"
            android:textColor="@color/blue"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/listwaktuberakhir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/listwaktumulai"
            android:layout_marginStart="30dp"
            android:layout_marginBottom="5dp"
            android:text="Waktu Berakhir"
            android:textColor="@color/blue"
            android:textSize="14sp" />

        <ImageButton
            android:id="@+id/updateButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="90dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@id/listtanggal"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Update"
            android:padding="8dp"
            android:src="@drawable/iconpensil" />

        <ImageButton
            android:id="@+id/deleteButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="139dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@id/listtanggal"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Delete"
            android:padding="8dp"
            android:src="@drawable/icontrash" />

        <ImageButton
            android:id="@+id/detailButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentTop="true"
            android:layout_marginStart="2dp"
            android:layout_marginTop="3dp"
            android:layout_toEndOf="@id/deleteButton"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            android:contentDescription="Detail"
            android:padding="8dp"
            android:src="@drawable/iconsinfo" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
